import {
  core.list {drop, length, span},
}

define split-at-key(key: &text, xs: list(text)): except(list(text), pair(list(text), list(text))) {
  let Pair(ys, zs) =
    span(xs, function (x) {
      ne-text(x, key)
    })
  in
  let len on zs = length(zs) in
  if eq-int(len, 0) {
    Error(ys)
  } else {
    OK(Pair(ys, drop(zs, 1)))
  }
}
