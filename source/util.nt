import {
  core.list {drop, span},
}

define split-at-key(key: &text, xs: list(text)): either(list(text), pair(list(text), list(text))) {
  let Pair(ys, zs) =
    span(xs, function (x) {
      ne-text(x, key)
    })
  in
  let len on zs = length(zs) in
  if eq-int(len, 0) {
    Left(ys)
  } else {
    Right(Pair(ys, drop(zs, 1)))
  }
}
