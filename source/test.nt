import {
  core.bool.show,
  core.either {from-right},
  core.int.io {print-int},
  core.list {for},
  core.show {Show},
  core.text.io {print-line},
  this.argot {argot},
  this.error {report},
  this.make-argot-kit {make-argot-kit-from-argv},
  this.parse {end-of-input, many, optional},
  this.preset {flag, int-required, text-required},
}

data config {
| Config(
    v1: bool,
    v2: bool,
    v3: int,
    v4: text,
    v5: list(text),
  )
}

define my-argument-parser: argot(config) {
  function (k) {
    try v1 = flag("-b")(k);
    try v2 = flag("-c")(k);
    try mv3 = optional(int-required("--integer"))(k);
    try mv4 = optional(text-required("--clang-option"))(k);
    try v5 = many(text-required("-i"))(k);
    try _ = end-of-input(k);
    Right(
      Config{
        v1,
        v2,
        v3 := from-right(mv3, 123),
        v4 := from-right(mv4, *""),
        v5,
      },
    )
  }
}

define zen(): unit {
  pin k = make-argot-kit-from-argv();
  match my-argument-parser(k) {
  | Left(e) =>
    pin message = report(e);
    print-line(message)
  | Right(v) =>
    let Config{v1, v2, v3, v4, v5} = v;
    let Show{show := !show} = core.bool.show.as-show;
    pin v1-txt = show(v1);
    pin v2-txt = show(v2);
    pin v4-txt = v4;
    print("right\n");
    print("v1: ");
    print(v1-txt);
    print(", v2: ");
    print(v2-txt);
    print(", v3: ");
    print-int(v3);
    print(", v4: ");
    print-line(v4-txt);
    print("v5:\n");
    for(v5, function (t) {
      pin t = t;
      print-line(t)
    })
  }
}

define main(): unit {
  zen();
}
